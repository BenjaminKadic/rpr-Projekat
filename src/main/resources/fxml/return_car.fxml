<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #242424;" stylesheets="@../css/admin.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controller.returnController">
    <center>
        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tv_cars" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#returnCarOnClick" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="tc_id" minWidth="50.0" prefWidth="-1.0" text="Rent id" />
                  <TableColumn fx:id="tc_make" editable="false" minWidth="100.0" prefWidth="-1.0" text="Car Make" />
                  <TableColumn fx:id="tc_model" editable="false" minWidth="100.0" prefWidth="-1.0" text="Car Model" />
                  <TableColumn fx:id="tc_license" editable="false" minWidth="75.0" prefWidth="-1.0" text="Username" />
               </columns>
               <VBox.margin>
                  <Insets bottom="30.0" top="15.0" />
               </VBox.margin>
            </TableView>
            </children>
            <BorderPane.margin>
                <Insets left="30.0" right="30.0" />
            </BorderPane.margin>
        </VBox>
    </center>
   <top>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Double click to return a car!" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
         <font>
            <Font name="Segoe UI Semilight" size="20.0" />
         </font>
      </Text>
   </top>
</BorderPane>
