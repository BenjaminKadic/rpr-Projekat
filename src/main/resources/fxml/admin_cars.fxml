<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #242424;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar stylesheets="@../css/MenuBar.css" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="mi_logout" mnemonicParsing="false" text="Log out" />
                        <MenuItem fx:id="mi_close" mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Cars" />
                        <MenuItem fx:id="mi_users" mnemonicParsing="false" text="Users" />
                        <MenuItem fx:id="mi_rents" mnemonicParsing="false" text="Rents" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
      <ListView fx:id="lv_cars" minWidth="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="10.0" right="40.0" top="10.0" />
         </BorderPane.margin></ListView>
   </center>
   <left>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tf_search" promptText="Search">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </TextField>
            <Button fx:id="button_return" mnemonicParsing="false" prefWidth="205.0" text="Return Car">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </Button>
            <Button fx:id="button_rent" mnemonicParsing="false" prefWidth="205.0" text="Rent Car">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </Button>
            <Button fx:id="button_add" mnemonicParsing="false" prefWidth="205.0" text="Add Car">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </Button>
            <Button fx:id="button_edit" mnemonicParsing="false" prefWidth="205.0" text="Edit Car">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </Button>
            <Button fx:id="button_delete" mnemonicParsing="false" prefWidth="205.0" text="Delete Car">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="17.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
