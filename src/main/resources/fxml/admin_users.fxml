    <left>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="button_UsersWithRents" mnemonicParsing="false" prefWidth="205.0" text="Users with Rents" textFill="#f9f9fb">
               <font>
