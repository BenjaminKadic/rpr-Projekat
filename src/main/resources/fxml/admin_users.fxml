                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Semilight" size="17.0" />
                    </font>
                </Button>
                <Button fx:id="button_edit" mnemonicParsing="false" prefWidth="205.0" text="Edit User" textFill="#f9f9fb">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Semilight" size="17.0" />
                    </font>
                </Button>
            <Text fill="#f9f9fb" strokeType="OUTSIDE" strokeWidth="0.0" text="Double click on user to delete!">
