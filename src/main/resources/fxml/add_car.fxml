<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pane" style="-fx-background-color: #242424;" stylesheets="@../css/admin.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controller.addCarController">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
         <children>
            <TextField fx:id="tf_make" promptText="Make">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="tf_model" promptText="Model">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="tf_color" promptText="Color">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="tf_registration" promptText="Registration">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Semilight" size="16.0" />
               </font>
            </TextField>
            <Spinner fx:id="spinner_price" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="195.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Spinner>
            <HBox alignment="CENTER">
               <children>
                <Button fx:id="button_add" defaultButton="true" mnemonicParsing="false" onAction="#addCar" prefWidth="55.0" text="Add" textFill="#f9f9fb" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="button_cancel" cancelButton="true" mnemonicParsing="false" onAction="#closeWindow" prefWidth="55.0" text="Cancel" textFill="#f9f9fb" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Add a Car" textFill="#f9f9fb" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="-20.0" top="20.0" />
         </BorderPane.margin>
         <font>
            <Font name="Segoe UI Semilight" size="24.0" />
         </font>
      </Label>
   </top>
</BorderPane>
